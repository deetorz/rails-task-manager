<div class="container-sm">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <p><%= @task.completed ? "This task is done" : "This task is not yet finished" %></p>
  <br>
  <p><%= link_to 'Edit task', edit_path %></p>
  <br>
  <p><%= link_to 'Delete task',
                  task_path(@task),
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this task?' } %></p>
  <br>
  <p><%= link_to 'Back to list', tasks_path %></p>
</div>
